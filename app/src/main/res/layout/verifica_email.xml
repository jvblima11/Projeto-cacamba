<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/verifica_email"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_titanium2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/titanium1">

        <TextView
            android:id="@+id/txt_verifica1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verificação de Email"
            android:textStyle="bold"
            android:textSize="19dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>

    </LinearLayout>

   <TextView
       android:id="@+id/txt_verifica2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       style="@style/edit_tex"
       android:layout_marginBottom="15dp"
       android:text="Email"
       android:textSize="15dp"
       android:drawableRight="@drawable/ic_mail"
       android:textColor="@color/black"
       />

    <com.google.android.flexbox.FlexboxLayout
        app:flexDirection="row"
        app:justifyContent="space_evenly"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <com.beardedhen.androidbootstrap.BootstrapButton
            app:bootstrapBrand="success"
            app:bootstrapSize="md"
            app:bootstrapText="Confirmar"
            android:id="@+id/btn_verifica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:roundedCorners="true"/>

    </com.google.android.flexbox.FlexboxLayout>

</LinearLayout>