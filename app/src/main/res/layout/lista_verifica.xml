<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroud_lista"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtplaca"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_marginBottom="5dp"
            android:text="Placa: 0000"
            android:textAlignment="center"
            android:textColor="@color/black"/>



        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="row"
            app:justifyContent="space_evenly">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtlocal"
                android:text="Local: LOCAL"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="17dp"/>

        </com.google.android.flexbox.FlexboxLayout>

        <View
            android:background="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="row"
            app:justifyContent="space_evenly">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/formaPagamento"
                android:text="Pagamento em: FORMA"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Valor"
                android:text="Valor: $$$ R$"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="16dp"/>
        </com.google.android.flexbox.FlexboxLayout>

        <View
            android:background="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>



        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="row"
            app:justifyContent="space_evenly">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtTAM"
                android:text="Tamanho:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="17dp"/>

        </com.google.android.flexbox.FlexboxLayout>

        <View
            android:background="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="row"
            app:justifyContent="space_evenly">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtDATA"
                android:text="Data de entrega:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="17dp"/>

        </com.google.android.flexbox.FlexboxLayout>

        <View
            android:background="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: STATUS"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/black"/>

    </LinearLayout>



</com.google.android.material.card.MaterialCardView>